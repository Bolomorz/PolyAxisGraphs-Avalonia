<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="PolyAxisGraphsAvalonia.Views.ErrorWindow"
        Title="Error"
		Width="400" Height="200" MaxWidth="400" MaxHeight="200" MinWidth="400" MinHeight="200">
	<Grid ColumnDefinitions="2*,*" RowDefinitions="*,2*">
		<Border BorderThickness="1" BorderBrush="Black" Background="Gainsboro" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
			<TextBlock x:Name="tbmessage" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Width="380"/>
		</Border>
		<Border BorderThickness="1" BorderBrush="Black" Background="Gainsboro" Grid.Column="0" Grid.Row="1">
			<Button x:Name="btok" Click="ClickOk" HorizontalAlignment="Center" VerticalAlignment="Center">Ok</Button>
		</Border>
	</Grid>
</Window>
